<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yusheng.hbgj.dao.FileInfoDao">

	<sql id="where">
		<where>


            <if test="fileOriginName != null and fileOriginName != ''">
                AND t.fileOriginName like  '%#{fileOriginName}%'
            </if>

            <if test="type != null and type != ''">
                AND t.type =  #{type}
            </if>


		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from file_info t
		<include refid="where" />
	</select>

	<select id="list" resultType="FileInfo">
		select * from file_info t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

</mapper>